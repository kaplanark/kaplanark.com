<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/header.ejs") %>
</head>
<body onload='clock()'>
    <%- include ("../partials/topbar.ejs") %>
    <!--signup-->
    <section class="formsection" style="height: 100vh;">
        <div class="container">
            <header>
                <h2 id="formtitle">Signup</h2>
            </header>
            <div class="row justify-content-center">
                <div class="col-md-3 signup-area mx-5">
                    <form action="/signup" method="POST" class="signup-form was-validated">
                        <div class="mb-4">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control is-invalid" name="username" required>
                          </div>
                        <div class="mb-4">
                            <label class="form-label">Password</label>
                          <input type="password" class="form-control is-invalid" name="password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary btn-submit">Signup</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--signup-->
    <%- include ("../admin/partials/footer.ejs") %>
</body>
</html>