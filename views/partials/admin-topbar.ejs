                <li>
                    <% if(!currentUser){ %>
                    <a class="dropdown-item" href="/signin">Login</a>
                    <% } else { %>
                    <a class="dropdown-item" href="/signout">Logout</a>
                </li>
                <li>
                    <a class="dropdown-item" href="/admin"><%= currentUser.username %></a>
                </li>
                    <% } %>
            </ul>
        </div>
    </div>
</div>
