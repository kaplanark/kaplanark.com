<div class="top-bar" id=topbar>
    <div class="container">
        <div class="top-bar-item text-center">
            <a id="day" class="me-2"></a>
            <a id="clock" class=""></a>
        </div>
        <div class="dropdown dropstart">
            <a class=" dropdown-toggle" href="#" role="button" id="dropdownmenü" data-bs-toggle="dropdown"
                aria-expanded="false">
                <i class="bi bi-person-circle"></i>
            </a>
